{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API",
      "envFile": "${workspaceFolder}/config/local.env",
      "program": "${workspaceFolder}/src/index.js",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "restart": true,
      "name": "API Nodemon",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "env": {
        "NODE_PATH": "."
      },
      "args": [
        "-i"
      ],
      "outputCapture": "std"
    }
  ]
}
