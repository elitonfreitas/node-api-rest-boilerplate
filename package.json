{
  "name": "node-api-rest-boilerplate",
  "version": "1.0.0",
  "description": "Initial settings for creating a NodeJs application with Rest API",
  "main": "src/index.js",
  "scripts": {
    "test": "cross-env LOG_ENABLE=false NODE_PATH=. jest --runInBand --passWithNoTests --detectOpenHandles --forceExit && npm run test:badge",
    "test:badge": "npx jest-badge-generator",
    "dev": "nodemon --inspect -r dotenv/config src/index.js dotenv_config_path=./config/local.env",
    "start": "node src/index"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "cross-env CI=true npm test --bail --findRelatedTests",
      "git add ."
    ]
  },
  "author": "Eliton Freitas <elitonfreitas@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.9.0",
    "helmet": "^4.3.1",
    "i18n": "^0.13.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "md5": "^2.3.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.32",
    "mongoose": "5.9.29",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/jest": "^26.0.19",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-badge-generator": "^1.1.5",
    "jest-express": "^1.11.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "sinon": "^9.2.2",
    "supertest": "^6.0.1"
  }
}
