{
  "name": "node-api-rest-boilerplate",
  "version": "1.0.0",
  "description": "Initial settings for creating a NodeJs application with Rest API",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --passWithNoTests && npm run test:badge",
    "test:badge": "npx jest-badge-generator",
    "start": "node src/index"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "cross-env CI=true npm test --bail --findRelatedTests",
      "git add ."
    ]
  },
  "author": "Eliton Freitas <elitonfreitas@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "i18n": "^0.8.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "mongoose": "^5.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-badge-generator": "^1.1.5",
    "jest-express": "^1.11.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "sinon": "^9.0.0"
  }
}
